<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.app.web.model">

	<!-- Nombre de la clase y el nombre de la tabla en la DB -->
	<class name="MedidoresConsulta" table="medidores">
		<!-- idArrendador de la clase Arrendador y el nombre de la referencia en 
			la DB -->
		<id name="id_medidor" column="id_medidor">
			<!-- Le indicamos que es de auto_increment con el identity -->
			<generator class="identity"></generator>
		</id>
		<!-- Ponemos los demas atributos de Arrendador Recoredemos que primero 
			es el nombre de como esta en tu clase y luego de como esta en la DB -->
		<property name="tipoServicio" column="tipoServicio"></property>
		<property name="numeroSerie" column="numeroSerie"></property>
		<property name="codigoLote" column="codigoLote"></property>
		<property name="codigoMedidor" column="codigoMedidor"></property>
		<property name="marca" column="marca"></property>
		<property name="modelo" column="modelo"></property>
		<property name="idRuta" column="ruta_id"></property>
		<property name="idGrupo" column="grupo_id"></property>
		<property name="latitud" column="latitud"></property>
		<property name="longitud" column="longitud"></property>
		<property name="idRadio" column="idRadio"></property>



	</class>

</hibernate-mapping>